{
    "data": {
        "source": {
            "backend": "json",
            "path": "data/source.json"
        },
        "download": {
            "backend": "json",
            "path": "data/download.json"
        },
        "bangumi_moe": {
            "backend": "json",
            "path": "data/bangumi_moe.json"
        }
    },
    "path": {
        "source": "/files/Downloads/Anima",
        "target": "/files/Media",
        "sub_path": {
            "ongoing": "AnimaOngoing",
            "bundle": "AnimaBundle"
        }
    },
    "downloader": "qbittorrent",
    "slack": false,
    "plex": false,
    "logging": {
        "default": [
            {
                "backend": "file",
                "path": "log/animaid.log"
            },
            {
                "backend": "console",
                "level": "debug"
            },
            {
                "backend": "mongodb",
                "database": "test",
                "collection": "log",
                "level": "info"
            }
        ],
        "crash": [
            {
                "backend": "file",
                "path": "log/crash.log",
                "level": "debug"
            }
        ]
    }
}